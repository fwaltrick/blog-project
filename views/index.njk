{% extends "_layout.njk" %} {% from "_macros.njk" import pageHeader %}
{% block page_title %}
  Blog Home
{% endblock %}
{% block main_content %}
  {{ pageHeader( title, subtitle,image_url ) }}

  <div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
      <div class="col-md-10 col-lg-8 col-xl-7">
        {% for post in posts %}
          <!-- Post preview-->
          <div class="post-preview">
            <a href="/{{ post.slug }}">
              <h2 class="post-title">{{ post.title }}</h2>
              <h3 class="post-subtitle">{{ post.teaser }}</h3>
            </a>
            <p class="post-meta">
              Posted by {{ post.author }} on {{ post.formattedDate }}
            </p>
          </div>
          <!-- Divider-->
          <hr class="my-4" />
        {% endfor %}
        <!-- Pager-->
        <div class="d-flex justify-content-end mb-4">
          <a class="btn btn-primary text-uppercase" href="#!">Older Posts â†’</a>
        </div>
      </div>
    </div>
  </div>
{% endblock %}